{{#if restaurant}}
<div class="show-image">
  {{#if image}}
  <img src="{{ image }}" alt="restaurant photo" style="width: 100%;">
  {{else}}
  <img src="{{ restaurant.image_url }}" alt="restaurant photo" style="width: 100%;">
  {{/if}}
</div>
{{/if}}
<div class="container">
  <div class="row my-3">
    {{#if error}}
    <p>{{ error }}</p>
    <a href="/">回首頁</a>
    {{else}}
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">首頁</a></li>
        <li class="breadcrumb-item active" aria-current="page">{{ restaurant.name }}</li>
        <li class="breadcrumb-item"><a href="/restaurant/{{ restaurant._id }}/edit">編輯</a></li>
      </ol>
    </nav>
    <h1 class="mb-3">{{ restaurant.name }}</h1>
    <div class="mb-3">
      <span class="badge bg-info me-2">{{ restaurant.category }}</span>
      <span class="badge bg-warning text-dark"><i class="bi bi-star-fill me-1"></i>{{ restaurant.rating }}</span>
    </div>
    <div>
      <div class="d-flex flex-column">
        <span class="me-3">{{ restaurant.phone }}</span>
        <span>{{ restaurant.location }}
          {{#if restaurant.google_map}}
          <a href="{{ restaurant.google_map }}" target="_blank">
            <i class="bi bi-geo-alt-fill"></i>
          </a>
          {{/if}}
        </span>
      </div>
      <p class="mt-3">{{ restaurant.description }}</p>
    </div>
    {{/if}}
  </div>
</div>